DefaultComponentTag=Teleop

# interfaces
Requires.Platform2d.Type=Platform2d
Requires.Platform2d.DefaultProxy=platform2d@local/robot2d
Requires.VelocityControl2d.Type=VelocityControl2d
Requires.VelocityControl2d.DefaultProxy=velocitycontrol2d@local/robot2d
Requires.DriveBicycle.Type=DriveBicycle
Requires.DriveBicycle.DefaultProxy=drivebicycle@local/car

# configuration
Config.RepeatInterval.Default=0.2

Config.InputDriver.Comment=valid drivers are { keyboard, joystick, fake }
Config.InputDriver.Default=keyboard
Config.Joystick.Device.Default=auto

Config.DisplayDriver.Comment=valid drivers are { term-iostream, term-ncurses }
Config.DisplayDriver.Default=term-iostream

Config.NetworkDriver.Comment=valid drivers are { vel-control, drive-bicycle }
Config.NetworkDriver.Default=vel-control
Config.VelControl.MaxSpeed.Default=1.0
Config.VelControl.MaxTurnrate.Default=40.0
Config.DriveBicycle.MaxSpeed.Default=1.0
Config.DriveBicycle.MaxSteerAngle.Default=45.0
