DefaultComponentTag=Teleop

# interfaces
Requires.Generic.Type=VelocityControl2d
Requires.Generic.DefaultProxy=platform2d@local/robot2d
Requires.Generic.DefaultProxy=drivebicycle@local/car
Requires.Generic.DefaultProxy=velocitycontrol2d@local/robot2d

# configuration
Config.RepeatInterval.Default=0.1

Config.DisplayDriver.Comment=valid drivers are { term-iostream, term-ncurses }
Config.DisplayDriver.Default=term-iostream

Config.InputDriver.Comment=valid drivers are { keyboard, joystick }
Config.InputDriver.Default=keyboard
Config.Joystick.Device.Default=auto

Config.VelocityControl2d.MaxSpeed.Default=1.0
Config.VelocityControl2d.MaxSideSpeed.Default=1.0
Config.VelocityControl2d.MaxTurnRate.Default=40.0
Config.VelocityControl2d.SpeedIncrement.Default=0.05
Config.VelocityControl2d.TurnRateIncrement.Default=2.0

Config.DriveBicycle.MaxSpeed.Default=1.0
Config.DriveBicycle.MaxSteerAngle.Default=45.0
Config.DriveBicycle.SpeedIncrement.Default=0.05
Config.DriveBicycle.SteerAngleIncrement.Default=5.0
